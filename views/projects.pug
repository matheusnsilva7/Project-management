doctype html
html(lang="en")
    head
        title Project management - #{title}
        link(rel="stylesheet" href="/css/projects.css")
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link( rel="icon" type="image/png" href="/img/Management-logos_transparent.png")
        link( rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" )

    body
        .container-body
            .container-base
                include _header
                .projects
                    .projects-container
                        h3.title Projects
                        .add-card 
                            span.material-symbols-outlined add
                               
                        each project in projects
                            a(href=`/project/${project.id}`).project-card
                                if project.admin._id.toString() === user._id.toString()
                                        span(class="material-symbols-outlined") group
                                else
                                        span(class="material-symbols-outlined").green groups
                                h3.name.titleProject Name
                                h3.description.nameProject=project.name
                                h3.admin.titleProject Admin
                                h3.adminName.nameProject=project.admin.name
                                h3.members.titleProject Members
                                h3.membersLength.nameProject=project.members.length + 1  
                        if projects.length <= 0
                            p.notFound No project found
                .formProject 
                    .background
                    form.projectform
                        h2 New Project
                        label(for="projectName") Name
                        input(type="text" id="projectName" placeholder="Name")
                        label(for="projectDescription") Description
                        textarea#projectDescription(name="Description", cols="30", rows="8" ) 
                        button.btn Create
        script(src="/js/bundle.js")