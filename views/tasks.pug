doctype html
html(lang="en")
    head
        title Project management - #{title}
        link(rel="stylesheet" href="/css/tasks.css")
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link( rel="icon" type="image/png" href="/img/Management-logos_transparent.png")
        link( rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" )

    body
        .container-body
            include _menu
            .container-base
                include _header
                .tasksContainer
                    .container-tasks
                        table 
                            tr 
                                th.name  Name 
                                th Due Date
                                th Difficult
                                th  Status
                                    
                            each task in tasks
                                tr 
                                    td.name= task.name
                                    td=task.dueDate ? `${task.dueDate.toString().slice(0,10).split(" ")[1]} ${task.dueDate.getDate() + 1}` : ""
                                    td(class=`${task.difficult}`)= task.difficult
                                    td(class=`${task.status}`)=task.status
        script(src="/js/bundle.js")
